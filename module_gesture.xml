<?xml version="1.0" encoding="UTF-8"?>
<project name="module_gesture" default="compile.module.gesture">
  <dirname property="module.gesture.basedir" file="${ant.file.module_gesture}"/>
  
  <property name="module.jdk.home.gesture" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.gesture" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.gesture" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.gesture" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="gesture.output.dir" value="${module.gesture.basedir}/bin"/>
  <property name="gesture.testoutput.dir" value="${module.gesture.basedir}/bin"/>
  
  <path id="gesture.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gesture.module.production.classpath">
    <path refid="${module.jdk.classpath.gesture}"/>
    <pathelement location="${basedir}/../burlap/dist/burlap.jar"/>
    <pathelement location="${basedir}/../burlap_rosbridge/dist/burlap_rosbridge.jar"/>
    <pathelement location="${basedir}/../java_rosbridge/dist/java_rosbridge_all.jar"/>
    <pathelement location="${basedir}/lib/freetts.jar"/>
    <pathelement location="${basedir}/lib/mbrola.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.23.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.19.jar"/>
  </path>
  
  <path id="gesture.runtime.production.module.classpath">
    <pathelement location="${gesture.output.dir}"/>
    <pathelement location="${basedir}/../burlap/dist/burlap.jar"/>
    <pathelement location="${basedir}/../burlap_rosbridge/dist/burlap_rosbridge.jar"/>
    <pathelement location="${basedir}/../java_rosbridge/dist/java_rosbridge_all.jar"/>
    <pathelement location="${basedir}/lib/freetts.jar"/>
    <pathelement location="${basedir}/lib/mbrola.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.23.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.19.jar"/>
  </path>
  
  <path id="gesture.module.classpath">
    <pathelement location="${gesture.output.dir}"/>
    <path refid="${module.jdk.classpath.gesture}"/>
    <pathelement location="${basedir}/../burlap/dist/burlap.jar"/>
    <pathelement location="${basedir}/../burlap_rosbridge/dist/burlap_rosbridge.jar"/>
    <pathelement location="${basedir}/../java_rosbridge/dist/java_rosbridge_all.jar"/>
    <pathelement location="${basedir}/lib/freetts.jar"/>
    <pathelement location="${basedir}/lib/mbrola.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.23.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.19.jar"/>
  </path>
  
  <path id="gesture.runtime.module.classpath">
    <pathelement location="${gesture.output.dir}"/>
    <pathelement location="${basedir}/../burlap/dist/burlap.jar"/>
    <pathelement location="${basedir}/../burlap_rosbridge/dist/burlap_rosbridge.jar"/>
    <pathelement location="${basedir}/../java_rosbridge/dist/java_rosbridge_all.jar"/>
    <pathelement location="${basedir}/lib/freetts.jar"/>
    <pathelement location="${basedir}/lib/mbrola.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.23.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.19.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.gesture">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gesture">
    <patternset refid="excluded.from.module.gesture"/>
  </patternset>
  
  <path id="gesture.module.sourcepath">
    <dirset dir="${module.gesture.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.gesture" depends="compile.module.gesture.production,compile.module.gesture.tests" description="Compile module gesture"/>
  
  <target name="compile.module.gesture.production" depends="register.custom.compilers" description="Compile module gesture; production classes">
    <mkdir dir="${gesture.output.dir}"/>
    <javac2 destdir="${gesture.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.gesture}/javac">
      <compilerarg line="${compiler.args.gesture}"/>
      <bootclasspath refid="gesture.module.bootclasspath"/>
      <classpath refid="gesture.module.production.classpath"/>
      <src refid="gesture.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.gesture"/>
    </javac2>
    
    <copy todir="${gesture.output.dir}">
      <fileset dir="${module.gesture.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.gesture.tests" depends="register.custom.compilers,compile.module.gesture.production" description="compile module gesture; test classes" unless="skip.tests"/>
  
  <target name="clean.module.gesture" description="cleanup module">
    <delete dir="${gesture.output.dir}"/>
    <delete dir="${gesture.testoutput.dir}"/>
  </target>
</project>